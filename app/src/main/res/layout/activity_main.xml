<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/custom_attr_app_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <ImageButton
            android:id="@+id/btn_fun"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="?attr/custom_attr_app_bg"
            android:src="@drawable/shezhi"
            android:scaleType="fitCenter"
            />


        <ImageButton
            android:id="@+id/btn_history"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/history"
            android:scaleType="fitCenter"
            android:background="?attr/custom_attr_app_bg"
            />



    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">
        <!--
        <view class="androidx.appcompat.app.AlertController$RecycleListView"
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="50sp"
            android:autoSizeMinTextSize="20sp"

            android:scrollbars="vertical"/>
        -->
        <EditText
            android:id="@+id/tv_equation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:textColor="#4D4D4D"
            android:textSize="30sp"
            android:cursorVisible="false"
            android:focusable="false"
            android:singleLine="true"
            android:background="@null"
            android:gravity="right|bottom"

            android:letterSpacing="0.2"

            />
       <EditText
           android:id="@+id/edit_text"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="3"
           android:textColor="?attr/custom_attr_ch_bg"
           android:singleLine="true"
           android:textSize="40sp"
           android:scrollbars="horizontal"
           android:maxLines="1"
           android:focusable="true"
           android:gravity="right"
           />


        <!--
        <TextView
            android:id="@+id/text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            app:autoSizeMaxTextSize="60sp"
            app:autoSizeMinTextSize="20sp"
            app:autoSizeStepGranularity="5sp"
            app:autoSizeTextType="uniform"
            android:maxLines="1"
            android:scrollbars="horizontal"
            android:fadeScrollbars="false"
            />
        -->

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/btn_fen"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/custom_attr_symbol_fun_bg"
                android:textColor="?attr/custom_attr_ch_bg"
                android:text="@string/fun_fen"

                android:textSize="28sp"
                android:typeface="sans"/>
            <Button
                android:id="@+id/btn_left"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/custom_attr_symbol_fun_bg"
                android:textColor="?attr/custom_attr_ch_bg"
                android:textSize="30sp"
                android:text="@string/fun_zuo"
                android:typeface="sans"/>
            <Button
                android:id="@+id/btn_7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/custom_attr_num_fun_bg"
                android:textColor="?attr/custom_attr_ch_bg"
                android:textSize="30sp"
                android:text="@string/num7"

                android:typeface="sans"/>
            <Button
                android:id="@+id/btn_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/custom_attr_num_fun_bg"
                android:textColor="?attr/custom_attr_ch_bg"
                android:text="@string/num4"

                android:textSize="30sp"
                android:typeface="sans"/>
            <Button
                android:id="@+id/btn_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/custom_attr_num_fun_bg"
                android:textColor="?attr/custom_attr_ch_bg"
                android:text="@string/num1"

                android:textSize="30sp"
                android:typeface="sans"/>
            <Button
                android:id="@+id/btn_percent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/custom_attr_symbol_fun_bg"
                android:textColor="?attr/custom_attr_ch_bg"
                android:text="@string/fun_bai"

                android:textSize="30sp"
                android:typeface="sans"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/btn_gen"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/custom_attr_symbol_fun_bg"
                android:textColor="?attr/custom_attr_ch_bg"
                android:text="@string/fun_gen"

                android:textSize="30sp"
                android:typeface="sans"/>
            <Button
                android:id="@+id/btn_right"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/custom_attr_symbol_fun_bg"
                android:textColor="?attr/custom_attr_ch_bg"
                android:text="@string/fun_you"

                android:textSize="30sp"
                android:typeface="sans"/>
            <Button
                android:id="@+id/btn_8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/custom_attr_num_fun_bg"
                android:textColor="?attr/custom_attr_ch_bg"
                android:text="@string/num8"

                android:textSize="30sp"
                android:typeface="sans"/>
            <Button
                android:id="@+id/btn_5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/custom_attr_num_fun_bg"
                android:textColor="?attr/custom_attr_ch_bg"
                android:text="@string/num5"

                android:textSize="30sp"
                android:typeface="sans"/>
            <Button
                android:id="@+id/btn_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/custom_attr_num_fun_bg"
                android:textColor="?attr/custom_attr_ch_bg"
                android:text="@string/num2"

                android:textSize="30sp"
                android:typeface="sans"/>
            <Button
                android:id="@+id/btn_0"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/custom_attr_num_fun_bg"
                android:textColor="?attr/custom_attr_ch_bg"
                android:text="@string/num0"

                android:typeface="sans"
                android:textSize="30sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/btn_reset"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/custom_attr_symbol_fun_bg"
                android:textColor="?attr/custom_attr_ch_bg"
                android:textSize="30sp"
                android:text="@string/fun_del"

                android:typeface="sans"/>

            <Button
                android:id="@+id/btn_divide"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/custom_attr_symbol_fun_bg"
                android:textColor="?attr/custom_attr_ch_bg"
                android:text="@string/fun_chu"

                android:textSize="30sp"
                android:typeface="sans" />
            <Button
                android:id="@+id/btn_9"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/custom_attr_num_fun_bg"
                android:textColor="?attr/custom_attr_ch_bg"
                android:text="@string/num9"

                android:textSize="30sp"
                android:typeface="sans"/>
            <Button
                android:id="@+id/btn_6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/custom_attr_num_fun_bg"
                android:textColor="?attr/custom_attr_ch_bg"
                android:text="@string/num6"

                android:textSize="30sp"
                android:typeface="sans"/>
            <Button
                android:id="@+id/btn_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/custom_attr_num_fun_bg"
                android:textColor="?attr/custom_attr_ch_bg"
                android:textSize="30sp"
                android:text="@string/num3"

                android:typeface="sans"/>
            <Button
                android:id="@+id/btn_point"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/custom_attr_symbol_fun_bg"
                android:textColor="?attr/custom_attr_ch_bg"
                android:text="@string/fun_dia"

                android:textSize="30sp"
                android:typeface="sans"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <ImageButton
                android:id="@+id/btn_del"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/custom_attr_symbol_fun_bg"
                android:src="@drawable/backspace"
                android:scaleType="fitCenter"
                android:padding="25dp"
                android:typeface="sans"/>
            <Button
                android:id="@+id/btn_multiply"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/custom_attr_symbol_fun_bg"
                android:textColor="?attr/custom_attr_ch_bg"
                android:textSize="30sp"
                android:text="@string/fun_che"

                android:typeface="sans"/>
            <Button
                android:id="@+id/btn_subtract"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/custom_attr_symbol_fun_bg"
                android:textColor="?attr/custom_attr_ch_bg"
                android:text="@string/fun_jan"

                android:textSize="30sp"
                android:typeface="sans"/>
            <Button
                android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/custom_attr_symbol_fun_bg"
                android:textColor="?attr/custom_attr_ch_bg"
                android:text="@string/fun_jia"

                android:textSize="30sp"
                android:typeface="sans"/>
            <Button
                android:id="@+id/btn_equal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="?attr/custom_attr_symbol_fun_bg"
                android:textColor="?attr/custom_attr_ch_bg"
                android:textSize="30sp"
                android:text="@string/fun_den"

                android:typeface="sans"/>
        </LinearLayout>



    </LinearLayout>



</LinearLayout>