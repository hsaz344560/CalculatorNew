<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/custom_attr_app_bg"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingRight="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="6dp"
            android:background="?attr/custom_attr_app_bg"
            android:scaleType="fitCenter"
            android:src="@drawable/fanhui" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="29"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/lay0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/group_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/speech" />

            <TextView
                android:id="@+id/groupname_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"

                android:layout_toRightOf="@+id/group_img"
                android:text="音效开关"
                android:textColor="?attr/custom_attr_ch_bg"
                android:textSize="22sp" />

            <Switch
                android:id="@+id/sound_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:switchMinWidth="10dp"
                android:thumb="@drawable/switch_custom_thumb_selector"
                android:track="@drawable/switch_custom_track_selector" />

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="81dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="#DDDDDD" />

        <RelativeLayout
            android:id="@+id/lay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/group_img1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/theme" />

            <TextView
                android:id="@+id/groupname_tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:paddingTop="5dp"
                android:layout_toRightOf="@+id/group_img1"
                android:text="模式选择"
                android:textColor="?attr/custom_attr_ch_bg"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/item_right1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/qiehuan" />

        </RelativeLayout>

        <View
            android:id="@+id/down_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="81dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="#DDDDDD"
            android:visibility="visible"/>
        <LinearLayout
            android:id="@+id/lin0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">
            <RelativeLayout
                android:id="@+id/lay2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">



                <TextView
                    android:id="@+id/groupname_tv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"

                    android:text="白天模式"
                    android:textColor="?attr/custom_attr_ch_bg"
                    android:textSize="22sp" />

                <Switch
                    android:id="@+id/day_switch"
                    android:checked="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:switchMinWidth="10dp"
                    android:thumb="@drawable/switch_custom_thumb_selector"
                    android:track="@drawable/switch_custom_track_selector" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/lay3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">



                <TextView
                    android:id="@+id/groupname_tv3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"

                    android:text="黑夜模式"
                    android:textColor="?attr/custom_attr_ch_bg"
                    android:textSize="22sp" />

                <Switch
                    android:id="@+id/night_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:switchMinWidth="10dp"
                    android:thumb="@drawable/switch_custom_thumb_selector"
                    android:track="@drawable/switch_custom_track_selector" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/lay4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">



                <TextView
                    android:id="@+id/groupname_tv4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"

                    android:text="护眼模式"
                    android:textColor="?attr/custom_attr_ch_bg"
                    android:textSize="22sp" />

                <Switch
                    android:id="@+id/eye_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:switchMinWidth="10dp"
                    android:thumb="@drawable/switch_custom_thumb_selector"
                    android:track="@drawable/switch_custom_track_selector" />

            </RelativeLayout>

            <View
                android:id="@+id/item_line"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="81dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:background="#DDDDDD" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>